{% extends 'portal/portal' %}
{% block appBody %}
    <section class="content-header">
        <h1>
            RRHH
            <small>Principal</small>
        </h1>
        <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Resumen Asistencia</h3>
                    </div>
                    <div class="box-body">
                        <div class="col-lg-4">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                    {% set total = 0 %}
                                    {% for d in GetAllTurnoDiaResumen if false != GetAllTurnoDiaResumen %}

                                        <td>
                                            {% if d.asistencia|slice(0,5) == "Falta" %}
                                                <span class="label label-danger">
                                            {% elseif d.asistencia == "PRESENTE" %}
                                                <span class="label label-success">
                                            {% elseif d.asistencia == "LIBRE" %}
                                                <span class="label label-primary">
                                            {% else  %}
                                                <span class="label label-warning">
                                            {% endif %}
                                            {{ d.asistencia }}</span>
                                        </td>
                                        <td> {{ d.cuenta }}</td>
                                        {% set total = total + d.cuenta %}
                                    {% endfor %}
                                        <td>TOTAL</td><td>{{ total }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="box">

                <div class="box-body">
                    {% set count = 1 %}
                    {% set tope = 18 %}
                    {% for d in getAllTurnosDia if false != getAllTurnosDia %}
                        {% if count == 1 %}
                            <div class="col-lg-4">
                                <table class="table table-bordered">
                                    <thead>
                                        <th>Ejecutivo</th>
                                        <th>Asistencia</th>
                                    </thead>
                                    <tbody>

                        {% endif %}
                                        <tr>
                                            <td>{{ d.name }}</td>
                                            <td>
                                                {% if d.asistencia|slice(0,5) == "Falta" %}
                                                    <span class="label label-danger">
                                                {% elseif d.asistencia == "" %}
                                                    <span class="label label-success">
                                                {% elseif d.asistencia == "LIBRE" %}
                                                    <span class="label label-primary">
                                                {% else  %}
                                                    <span class="label label-warning">
                                                {% endif %}
                                            {{ d.asistencia ? d.asistencia:'PRESENTE' }}</td>
                                        </tr>
                        {% set count = count + 1 %}
                        {% if count == tope %}
                                    </tbody>
                                </table>
                            </div>
                            {% set count = 1 %}
                        {% endif %}

                    {% endfor %}
                    {% if count < tope %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->

{% endblock %}
