{% extends 'portal/portal' %}
{% block appBody %}
    <section class="content-header">
        <h1>
            Despacho
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Resumen</h3>
                    </div>
                    <div class="box-body">
                        <div class="col-lg-1">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                    {% for d in db_asistencia_tecnico_Resumen if false != db_asistencia_tecnico_Resumen %}

                                        <td>{{ d.asistencia }}</td>
                                        <td>{{ d.cuenta }}</td>

                                    {% endfor %}
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Detalle Asistencia</h3>
                </div>
                <div class="box-body">
                    {% set count = 1 %}
                    {% set tope = 20 %}
                    {% for d in db_asistencia_tecnico if false != db_asistencia_tecnico %}
                        {% if count == 1 %}
                            <div class="col-lg-1">
                                <table class="table table-bordered">
                                    <thead>
                                        <th>TEC</th>
                                        <th>ASI</th>
                                    </thead>
                                    <tbody>

                        {% endif %}
                                        <tr>
                                            <td>{{ d.codigo }}</td>
                                            <td>
                                            {% if d.asistencia == "AUS" %}
                                                <span class="label label-danger">
                                            {% elseif d.asistencia == "PRE" %}
                                                <span class="label label-success">
                                            {% else  %}
                                                <span class="label label-warning">


                                            {% endif %}
                                            {{ d.asistencia }}</td>
                                        </tr>
                        {% set count = count + 1 %}
                        {% if count == tope %}
                                    </tbody>
                                </table>
                            </div>
                            {% set count = 1 %}
                        {% endif %}

                    {% endfor %}
                    {% if count < tope %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        </div>
    </section>
    <!-- /.content -->

{% endblock %}
{% block appScript %}
  <script type="text/javascript">
    setInterval(function() {
        window.location.reload();
    }, 300000);
  </script>
{% endblock %}
