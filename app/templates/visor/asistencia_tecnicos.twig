{% extends 'overall/layout_visor' %}
{% block appBody %}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Resumen</h3>
                </div>
                <div class="box-body">
                    <div class="col-lg-1">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                {% set total = 0 %}
                                {% for d in db_asistencia_tecnico_Resumen if false != db_asistencia_tecnico_Resumen %}

                                    <td>
                                        {% if d.asistencia == "AUS" %}
                                            <span class="label label-danger">
                                        {% elseif d.asistencia == "PRE" %}
                                            <span class="label label-success">
                                        {% else  %}
                                            <span class="label label-warning">
                                        {% endif %}
                                        {{ d.asistencia }}
                                    </td>
                                    <td>{{ d.cuenta }}</td>
                                    {% set total = total + d.cuenta %}
                                {% endfor %}
                                    <td>TOTAL</td><td>{{ total }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
        <div class="box">

            <div class="box-body">
                {% set count = 1 %}
                {% set tope = 18 %}
                {% for d in db_asistencia_tecnico if false != db_asistencia_tecnico %}
                    {% if count == 1 %}
                        <div class="col-lg-1">
                            <table class="table table-bordered">
                                <thead>
                                    <th>TEC</th>
                                    <th>ASI</th>
                                </thead>
                                <tbody>

                    {% endif %}
                                    <tr>
                                        <td>{{ d.codigo }}</td>
                                        <td>
                                        {% if d.asistencia == "AUS" %}
                                            <span class="label label-danger">
                                        {% elseif d.asistencia == "PRE" %}
                                            <span class="label label-success">
                                        {% else  %}
                                            <span class="label label-warning">
                                        {% endif %}
                                        {{ d.asistencia }}</td>
                                    </tr>
                    {% set count = count + 1 %}
                    {% if count == tope %}
                                </tbody>
                            </table>
                        </div>
                        {% set count = 1 %}
                    {% endif %}

                {% endfor %}
                {% if count < tope %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    </div>
</section>
<!-- /.content -->
{% endblock %}
{% block appScript %}
    <script type="text/javascript">
      setInterval(function() {
          location.href = "visor/report_agendamiento"
      }, 120000);
    </script>
{% endblock %}
